<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">

    <link rel="stylesheet" href="/stylesheets/pageStyle.css">
    <script src="https://code.jquery.com/jquery-1.10.1.min.js"></script>
    <title> <%= username %>'s Homepage</title>
  </head>
  <body>

    <% include ../partials/nav.ejs %>

    <div class="tabs">
      <h2>
        Hot Right Now
      </h2>
    </div>


      <% if(hotRightNow){ %>
        <% for(var i=0; i < hotRightNow.length - 1; i += 2) { %>
          <div class="containHot">

          <div class="hot">

          <% if(hotRightNow[i].picture){ %>
            <img src="<%= hotRightNow[i].picture %>" alt="Can't display image">
          <% } else { %>
            <img src="/pictures/lang-logo.png" alt="Can't display image">
          <% } %>

          <div class="username">
            <% if(hotRightNow[i].type == 'single'){ %>
              <h2>Single: &nbsp <%= hotRightNow[i].name %> </h2>
            <% } else if(hotRightNow[i].type == 'album') { %>
              <h2>Album: &nbsp <%= hotRightNow[i].name %> </h2>
            <% } else { %>
              <h2> <%= hotRightNow[i].name %> </h2>
            <% } %>

          </div>

          <div class="date">
           <%  if(hotRightNow[i].artists.length > 1){ %>
             <h3> Artists:
             <% hotRightNow[i].artists.forEach((artist, y) => { %>
               <% if(y == hotRightNow[i].artists.length -1){ %>
                 <span><%= artist %></span>
             <% } else { %>
               <span><%= artist %>,</span>
             <% } %>
             <% }) %>
             </h3>

           <% } else { %>
             <h3> Artist: <%= hotRightNow[i].artists[0] %> </h3>
           <% } %>

            </div>

            <% if(hotRightNow[i].type == 'single'){ %>
              <div class="recognize">
                <form class="tracks" method="post">
                  <% if(myTracks.includes(hotRightNow[i].id)){ %>
                    <input type="hidden" id="<%= hotRightNow[i].id %>Hidden" name="delete" value="<%= hotRightNow[i].id %>">
                    <input type="submit" id="<%= hotRightNow[i].id %>Input" name="sub" value="Remove from my favourite songs">
                  <% } else { %>
                    <input type="hidden" id="<%= hotRightNow[i].id %>Hidden" name="add" value="<%= hotRightNow[i].id %>">
                    <input type="submit" id="<%= hotRightNow[i].id %>Input" name="sub" value="Add to my favourite songs">
                  <% } %>

                </form>
              </div>
            <% } else if(hotRightNow[i].type == 'album') { %>
              <div class="recognize">
                <form action="/albumExplore" method="post">
                  <input type="hidden" name="id" value="<%= hotRightNow[i].id %>">
                  <input type="hidden" name="album" value="<%= hotRightNow[i].name %>">
                  <% if(hotRightNow[i].picture){ %>
                    <input type="hidden" name="picture" value="<%= hotRightNow[i].picture %>">
                  <% } else { %>
                    <<input type="hidden" name="picture" value="/pictures/lang-logo.png">
                  <% } %>
                  <input type="submit" name="sub" value="Explore this album">
                </form>
              </div>
            <% } %>


          </div>

        <div class="hot">

        <% if(hotRightNow[i+1].picture){ %>
          <img src="<%= hotRightNow[i+1].picture %>" alt="Can't display image">
        <% } else { %>
          <img src="/pictures/lang-logo.png" alt="Can't display image">
        <% } %>

        <div class="username">
          <% if(hotRightNow[i+1].type == 'single'){ %>
            <h2>Single: &nbsp <%= hotRightNow[i+1].name %> </h2>
          <% } else if(hotRightNow[i+1].type == 'album') { %>
            <h2>Album: &nbsp <%= hotRightNow[i+1].name %> </h2>
          <% } else { %>
            <h2> <%= hotRightNow[i+1].name %> </h2>
          <% } %>
        </div>

        <div class="date">
         <%  if(hotRightNow[i+1].artists.length > 1){ %>
           <h3> Artists:
           <% hotRightNow[i+1].artists.forEach((artist, i) => { %>
             <% if(i == hotRightNow[i+1].artists.length -1){ %>
               <span><%= artist %></span>
           <% } else { %>
             <span><%= artist %>,</span>
           <% } %>
           <% }) %>
           </h3>

         <% } else { %>
           <h3> Artist: <%= hotRightNow[i+1].artists[0] %> </h3>
         <% } %>

          </div>

          <% if(hotRightNow[i+1].type == 'single'){ %>
            <div class="recognize">
              <form class="tracks" method="post">
                <% if(myTracks.includes(hotRightNow[i+1].id)){ %>
                  <input type="hidden" id="<%= hotRightNow[i+1].id %>Hidden" name="delete" value="<%= hotRightNow[i+1].id %>">
                  <input type="submit" id="<%= hotRightNow[i+1].id %>Input" name="sub" value="Remove from my favourite songs">
                <% } else { %>
                  <input type="hidden" id="<%= hotRightNow[i+1].id %>Hidden" name="add" value="<%= hotRightNow[i+1].id %>">
                  <input type="submit" id="<%= hotRightNow[i+1].id %>Input" name="sub" value="Add to my favourite songs">
                <% } %>

              </form>
            </div>
          <% } else if(hotRightNow[i+1].type == 'album'){ %>
            <div class="recognize">
              <form action="/albumExplore" method="post">
                <input type="hidden" name="id" value="<%= hotRightNow[i+1].id %>">
                <input type="hidden" name="album" value="<%= hotRightNow[i+1].name %>">
                <% if(hotRightNow[i+1].picture){ %>
                  <input type="hidden" name="picture" value="<%= hotRightNow[i+1].picture %>">
                <% } else { %>
                  <input type="hidden" name="picture" value="/pictures/lang-logo.png">
                <% } %>

                <input type="submit"  name="sub" value="Explore this album">
              </form>
            </div>
          <% } %>

        </div>




          </div>

        <% } %>
      <% } else { %>
        <h2>Nothing to share.</h2>
      <% }%>


    <div class="tabs">
      <h2>
        Based On Your Picks
      </h2>
    </div>

      <div class="activity">
        <h3>To be added soon!</h3>
      </div>

    <div class="tabs">
      <h2>
        Your Friends Activity
      </h2>
    </div>

    <div class="activity">
      <h3>To be added soon!</h3>
    </div>

    <script type="text/javascript">

    $(() => {
      $('#confirmLogout').click(function(){
        if(confirm('Are you sure you wish to logout?')) {
            return true;
          }
          return false;
        });

        $('.tracks').submit(function(x) {
          x.preventDefault();
          $.ajax({
            type: "POST",
            url: "/songToFaves",
            data: $(this).serialize(),
            success: function(res){
              if(res.add){
                $(`#${res.add}Input`).val("Remove from my favourite songs");
                $(`#${res.add}Hidden`).attr('name', 'delete');
              }
              else {
                $(`#${res.delete}Input`).val("Add to my favourite songs");
                $(`#${res.delete}Hidden`).attr('name', 'add');
              }
            }
          })
        })


        $('.artists').submit(function(x) {
          x.preventDefault();
          $.ajax({
            type: "POST",
            url: "/artistToFaves",
            data: $(this).serialize(),
            success : function(res){
              if(res.add){
                $(`#${res.add}Input`).val("Remove from my favourite artists");
                $(`#${res.add}Hidden`).attr('name', 'delete');
              }
              else {
                $(`#${res.delete}Input`).val("Add to my favourite artists");
                $(`#${res.delete}Hidden`).attr('name', 'add');
              }
            }
          })
        })

    });

    </script>

  </body>
</html>
