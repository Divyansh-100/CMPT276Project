<!DOCTYPE html>
<html>
    <head>
        <title>Messages</title>
        <link rel="stylesheet" href="/stylesheets/chat.css">
        <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    </head>
    <body>
        <div class="nav">
            <div class="options">
                <a href="/home/<%= data.id %>">Home</a>
                <a href="/home/<%= data.id %>">Notifications</a>
                <a href="/chat/<%= data.username %>/0">Messages</a>
                <a href="/home/<%= data.id %>">My Music</a>
                <a href= "/profile/<%= data.id %>" style="float:right"> <%= data.username %> </a>
            </div>
            <div class="centered">
                <a href="/mypage">Museical</a>
            </div>
        </div>

        <div class="contactList">
            <h2>Contacts</h2>
            <ul id="chatlist">
                <% chatInfo.forEach(function(chats) { %>
                    <a href="/chat/<%= data.username %>/<%= chats.chatid %>"><%= chats.name %></a> <br>
                <% }); %>
            </ul>
        </div>

        <div class="container"></div>
            <ul id="messages">
                <% mesInfo.forEach(function(msg) { %>
                    <li class= "<%= msg.sender %>"><%= msg.message %></li> <br>
                    <span>sent by <%= msg.sender %></span> <br>
                <% }); %>
            </ul>
            <form action="" id="chatForm">
            <input id="txt" autocomplete="off" autofocus="on" placeholder="type a message..." / required><button>Send</button>
            </form>
            <script>
                $(()=> {
                    var socket = io();
                    // submit text message without reload/refresh the page
                    $('form').submit((evt)=>{
                        evt.preventDefault(); // prevents page reloading
                        socket.emit('chat_message', $('#txt').val());
                        $('#txt').val('');
                        return false;
                    });

                    //show messages sent by you
                    socket.on('chat_message', (info)=>{
                        $('#messages').append($("<li class='"+username+"'>").text(info.message));
                        $('#messages').append($("<br>"));
                        $('#messages').append($("<span>").text("sent by " +info.name));
                        $('#messages').append($("<br>"));
                        document.getElementById("messages").scrollTop = document.getElementById("messages").scrollHeight;
                        recolor()
                    });

                    // temporary manual username input
                    var username = '<%= data.username %>';
                    socket.emit('username', username);

                    //show messages sent by other users
                    socket.on("received", (info) => {
                        $('#messages').append($("<li class='"+info.name+"'>").text(info.message));
                        $('#messages').append($("<br>"));
                        $('#messages').append($("<span>").text("sent by " +info.name));
                        $('#messages').append($("<br>"));
                        document.getElementById("messages").scrollTop = document.getElementById("messages").scrollHeight;
                    });

                    window.onload = () => {
                        document.getElementById("messages").scrollTop = document.getElementById("messages").scrollHeight;
                        recolor();
                    }

                    function recolor(){
                        var sent = document.getElementsByClassName(username);
                        for (var i = 0; i < sent.length; i++){
                            sent[i].style.backgroundColor = 'lightblue';
                        }
                    }
                });

            </script>
            <script src="/socket.io/socket.io.js"></script>
        </div>
    </body>
    </html>
